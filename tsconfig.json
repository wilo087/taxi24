{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@drivers/*": [
        "src/drivers/*"
      ],
      "@trips/*": [
        "src/trips/*"
      ],
      "@passengers/*": [
        "src/trips/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  }
}